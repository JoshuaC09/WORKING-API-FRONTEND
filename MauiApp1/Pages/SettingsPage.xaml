<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="10">
        <Label Text="Database Connection Settings" FontSize="20" HorizontalOptions="Center" />

        <Label Text="Server" />
        <Entry x:Name="serverEntry" Placeholder="Enter server address" Text="{Binding Server}" />

        <Label Text="Database" />
        <Entry x:Name="databaseEntry" Placeholder="Enter database name" Text="{Binding Database}" />

        <Label Text="User" />
        <Entry x:Name="userEntry" Placeholder="Enter user name" Text="{Binding User}" />

        <Label Text="Password" />
        <Entry x:Name="passwordEntry" Placeholder="Enter password" Text="{Binding Password}" IsPassword="True" />

        <Label Text="Port" />
        <Entry x:Name="portEntry" Placeholder="Enter port number" Text="{Binding Port}" Keyboard="Numeric" />

        <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
