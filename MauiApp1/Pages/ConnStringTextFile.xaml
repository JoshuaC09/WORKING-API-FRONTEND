<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.ConnStringTextFile"
             Title="ConnStringTextFile">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label 
            Text="Upload a BGC file for connection string"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Select File" Clicked="OnSelectFileClicked" Margin="0, 10, 0, 0" />

        <Button Text="Validate Connection" 
                Clicked="OnValidateConnectionClicked" 
                IsEnabled="False" 
                x:Name="ValidateButton" 
                Margin="0, 10, 0, 0" />

        <Label x:Name="StatusLabel"
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
               Margin="0, 20, 0, 0" />
    </VerticalStackLayout>
</ContentPage>
